{
  "name": "graphite-deployment",
  "version": "1.0.0",
  "description": "Hardhat deployment for Graphite Trust NFT",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:nft": "hardhat run deploy-nft.js --network graphite_testnet",
    "deploy:factory": "hardhat run deploy-factory.js --network graphite_testnet",
    "deploy:ecosystem": "hardhat run deploy-ecosystem.js --network graphite_testnet",
    "deploy:vote-factory": "hardhat run deploy-vote-factory.js --network graphite_testnet",
    "create:vote": "hardhat run create-vote.js --network graphite_testnet",
    "cast:vote": "hardhat run cast-vote.js --network graphite_testnet",
    "transfer:ownership": "hardhat run transfer-ownership.js --network graphite_testnet",
    "deploy:nft:mainnet": "hardhat run deploy-nft.js --network graphite",
    "deploy:factory:mainnet": "hardhat run deploy-factory.js --network graphite",
    "deploy:ecosystem:mainnet": "hardhat run deploy-ecosystem.js --network graphite",
    "deploy:vote-factory:mainnet": "hardhat run deploy-vote-factory.js --network graphite",
    "create:vote:mainnet": "hardhat run create-vote.js --network graphite",
    "cast:vote:mainnet": "hardhat run cast-vote.js --network graphite",
    "transfer:ownership:mainnet": "hardhat run transfer-ownership.js --network graphite",
