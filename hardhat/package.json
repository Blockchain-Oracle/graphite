  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "4.8.2",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.16.0",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.5.2"
  }
